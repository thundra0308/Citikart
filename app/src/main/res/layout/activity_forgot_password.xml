<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".activities.ForgotPasswordActivity">

    <soup.neumorphism.NeumorphCardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        app:neumorph_shadowColorDark="@color/neumorphdarkshadow"
        app:neumorph_shadowColorLight="@color/neumorphlightshadow"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:gravity="center"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:lottie_autoPlay="true"
                android:layout_gravity="center|start"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/ic_splash2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/app_name"
                android:gravity="center"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:textStyle="bold|italic"/>

        </LinearLayout>

    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:padding="10dp"
        app:neumorph_shadowColorDark="@color/neumorphdarkshadow"
        app:neumorph_shadowColorLight="@color/neumorphlightshadow">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lottie_rawRes="@raw/ic_forgotpass"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>

    </soup.neumorphism.NeumorphCardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:gravity="center"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="7dp"
        android:text="Enter Your Username And Email-Address We Will Send A Link On Your Registered Email To Reset Your Password.."
        android:textSize="16sp"
        android:textColor="@color/white"/>

    <soup.neumorphism.NeumorphCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:neumorph_shadowColorDark="@color/neumorphdarkshadow"
        app:neumorph_shadowColorLight="@color/neumorphlightshadow"
        app:neumorph_shapeType="flat"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <soup.neumorphism.NeumorphCardView
                android:layout_width="match_parent"
                android:layout_height="75dp"
                app:neumorph_shapeType="flat"
                android:layout_marginTop="7dp"
                app:neumorph_shadowColorDark="@color/neumorphdarkshadow"
                app:neumorph_shadowColorLight="@color/neumorphlightshadow">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:hintTextColor="@color/ethintcolor"
                    android:hint="Enter Username Or Email"
                    app:boxBackgroundColor="@color/colorPrimary"
                    app:boxStrokeWidth="0dp"
                    app:boxCornerRadiusBottomEnd="50dp"
                    app:boxCornerRadiusBottomStart="50dp"
                    app:boxCornerRadiusTopEnd="50dp"
                    app:boxCornerRadiusTopStart="50dp">

                    <EditText
                        android:id="@+id/etforgot"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/ethintcolor"
                        android:inputType="textEmailAddress|text"
                        />

                </com.google.android.material.textfield.TextInputLayout>

            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/btn_forgotpasssubmit"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                app:neumorph_shadowColorDark="@color/neumorphdarkshadow"
                app:neumorph_shadowColorLight="@color/neumorphlightshadow"
                android:layout_gravity="bottom|center"
                app:neumorph_shapeType="flat">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SUBMIT"
                        android:gravity="center"
                        android:textColor="@color/logbtncolor"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                </LinearLayout>

            </soup.neumorphism.NeumorphCardView>

        </LinearLayout>

    </soup.neumorphism.NeumorphCardView>


</LinearLayout>