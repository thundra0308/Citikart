<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimeBackgroundMain"
    tools:context=".activities.AddProductActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_addproductactivity"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorPrimeBackgroundMain"
        android:layout_height="?attr/actionBarSize"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD PRODUCT"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textColor="#008CFF"
            android:textStyle="bold"/>

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_addproductactivity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/cv_addproductactivity_addproductbtn"
        app:layout_constraintTop_toBottomOf="@id/toolbar_addproductactivity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_addproductactivity_img_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:weightSum="4">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_addproductactivity_img1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="5dp"
                    android:elevation="0dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/accountTopTextColor">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="0dp"
                        android:elevation="0dp"
                        app:cardBackgroundColor="@color/colorPrimeBackgroundMain">

                    <ImageView
                        android:id="@+id/iv_addproductactivity_img1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_profileplaceholder"/>

                    </androidx.cardview.widget.CardView>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_addproductactivity_img2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="5dp"
                    android:elevation="0dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/accountTopTextColor">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="0dp"
                        android:elevation="0dp"
                        app:cardBackgroundColor="@color/colorPrimeBackgroundMain">

                    <ImageView
                        android:id="@+id/iv_addproductactivity_img2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_profileplaceholder"/>

                    </androidx.cardview.widget.CardView>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_addproductactivity_img3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="5dp"
                    android:elevation="0dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/accountTopTextColor">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="0dp"
                        android:elevation="0dp"
                        app:cardBackgroundColor="@color/colorPrimeBackgroundMain">

                    <ImageView
                        android:id="@+id/iv_addproductactivity_img3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_profileplaceholder"/>

                    </androidx.cardview.widget.CardView>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_addproductactivity_img4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    app:cardCornerRadius="5dp"
                    android:elevation="0dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/accountTopTextColor">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="0dp"
                        android:elevation="0dp"
                        app:cardBackgroundColor="@color/colorPrimeBackgroundMain">

                    <ImageView
                        android:id="@+id/iv_addproductactivity_img4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_profileplaceholder"/>

                    </androidx.cardview.widget.CardView>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_addproduct_addproductname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                app:hintTextColor="#008CFF"
                android:hint="Enter Product Name"
                android:layout_marginTop="7dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_below="@id/ll_addproductactivity_img_container">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_addproduct_addproductname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textMultiLine"
                    android:textColor="@color/accountTopTextColor"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_addproduct_addproductdescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                app:hintTextColor="#008CFF"
                android:hint="Enter Product Description"
                android:layout_marginTop="7dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_below="@id/til_addproduct_addproductname">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_addproduct_addproductdescription"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textMultiLine"
                    android:textColor="@color/accountTopTextColor"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_addproduct_addproductprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                app:hintTextColor="#008CFF"
                android:hint="Enter Product Price"
                android:layout_marginTop="7dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_below="@id/til_addproduct_addproductdescription">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_addproduct_addproductprice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="numberDecimal"
                    android:textColor="@color/accountTopTextColor"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_addproduct_addproductdetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                app:hintTextColor="#008CFF"
                android:hint="Enter Product Details"
                android:layout_marginTop="7dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_below="@id/til_addproduct_addproductprice">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_addproduct_addproductdetails"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textMultiLine"
                    android:textColor="@color/accountTopTextColor"/>

            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_addproductactivity_addproductbtn"
        android:layout_width="130dp"
        android:layout_height="45dp"
        app:cardCornerRadius="5dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#008CFF"
        app:layout_constraintTop_toBottomOf="@id/nsv_addproductactivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="ADD"
            android:layout_gravity="center"
            android:gravity="center"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>