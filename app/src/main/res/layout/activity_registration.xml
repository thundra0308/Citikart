<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".activities.RegistrationActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarreg"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        >
        <TextView
            android:id="@+id/tbtitlereg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginEnd="0dp"
            android:text="CREATE AN ACCOUNT"
            android:layout_gravity="center"
            android:textColor="@color/toolbartitlecolor"
            android:textSize="22sp"
            android:textStyle="bold"/>

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/loginscroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbarreg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/reganimatebox"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                app:neumorph_shadowColorDark="@color/neumorphdarkshadow"
                app:neumorph_shadowColorLight="@color/neumorphlightshadow"
                android:layout_marginEnd="25dp"
                app:neumorph_shapeType="flat">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="205dp"
                    app:lottie_rawRes="@raw/ic_signuplottie"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"/>

            </soup.neumorphism.NeumorphCardView>

            <TextView
                android:id="@+id/tvdesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reganimatebox"
                android:text="Enter The Required Details To Get Registered \nWith Us .."
                android:textColor="@color/tvlogdesccolor"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textSize="17sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_below="@id/tvdesc"
                android:orientation="vertical"
                >

                <soup.neumorphism.NeumorphCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    app:neumorph_shadowColorDark="@color/neumorphdarkshadow"
                    app:neumorph_shadowColorLight="@color/neumorphlightshadow"
                    app:neumorph_shapeType="flat"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <soup.neumorphism.NeumorphCardView
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            app:neumorph_shapeType="flat"
                            android:layout_marginTop="7dp"
                            app:neumorph_shadowColorDark="@color/neumorphdarkshadow"
                            app:neumorph_shadowColorLight="@color/neumorphlightshadow">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:hintTextColor="@color/ethintcolor"
                                android:hint="First Name"
                                app:boxBackgroundColor="@color/colorPrimary"
                                app:boxStrokeWidth="0dp"
                                app:boxCornerRadiusBottomEnd="50dp"
                                app:boxCornerRadiusBottomStart="50dp"
                                app:boxCornerRadiusTopEnd="50dp"
                                app:boxCornerRadiusTopStart="50dp">

                                <EditText
                                    android:id="@+id/etregfirstname"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/ethintcolor"
                                    android:inputType="textPersonName"
                                    />

                            </com.google.android.material.textfield.TextInputLayout>

                        </soup.neumorphism.NeumorphCardView>

                        <soup.neumorphism.NeumorphCardView
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            app:neumorph_shapeType="flat"
                            app:neumorph_shadowColorDark="@color/neumorphdarkshadow"
                            app:neumorph_shadowColorLight="@color/neumorphlightshadow">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:hintTextColor="@color/ethintcolor"
                                android:hint="Last Name"
                                app:boxBackgroundColor="@color/colorPrimary"
                                app:boxStrokeWidth="0dp"
                                app:boxCornerRadiusBottomEnd="10dp"
                                app:boxCornerRadiusBottomStart="10dp"
                                app:boxCornerRadiusTopEnd="10dp"
                                app:boxCornerRadiusTopStart="10dp">

                                <EditText
                                    android:id="@+id/etreglastname"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/ethintcolor"
                                    android:inputType="textPersonName"
                                    />

                            </com.google.android.material.textfield.TextInputLayout>

                        </soup.neumorphism.NeumorphCardView>

                        <soup.neumorphism.NeumorphCardView
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            app:neumorph_shapeType="flat"
                            app:neumorph_shadowColorDark="@color/neumorphdarkshadow"
                            app:neumorph_shadowColorLight="@color/neumorphlightshadow">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:hintTextColor="@color/ethintcolor"
                                android:hint="Email"
                                app:boxBackgroundColor="@color/colorPrimary"
                                app:boxStrokeWidth="0dp"
                                app:boxCornerRadiusBottomEnd="10dp"
                                app:boxCornerRadiusBottomStart="10dp"
                                app:boxCornerRadiusTopEnd="10dp"
                                app:boxCornerRadiusTopStart="10dp">

                                <EditText
                                    android:id="@+id/etregemail"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/ethintcolor"
                                    android:inputType="textEmailAddress"
                                    />

                            </com.google.android.material.textfield.TextInputLayout>

                        </soup.neumorphism.NeumorphCardView>

                        <soup.neumorphism.NeumorphCardView
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            app:neumorph_shapeType="flat"
                            app:neumorph_shadowColorDark="@color/neumorphdarkshadow"
                            app:neumorph_shadowColorLight="@color/neumorphlightshadow">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:hintTextColor="@color/ethintcolor"
                                android:hint="Password"
                                app:boxBackgroundColor="@color/colorPrimary"
                                app:boxStrokeWidth="0dp"
                                app:boxCornerRadiusBottomEnd="10dp"
                                app:boxCornerRadiusBottomStart="10dp"
                                app:boxCornerRadiusTopEnd="10dp"
                                app:boxCornerRadiusTopStart="10dp">

                                <EditText
                                    android:id="@+id/etregpass"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/ethintcolor"
                                    android:inputType="textPassword"
                                    />

                            </com.google.android.material.textfield.TextInputLayout>

                        </soup.neumorphism.NeumorphCardView>

                        <soup.neumorphism.NeumorphCardView
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            app:neumorph_shapeType="flat"
                            app:neumorph_shadowColorDark="@color/neumorphdarkshadow"
                            app:neumorph_shadowColorLight="@color/neumorphlightshadow">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="Confirm Password"
                                app:boxBackgroundColor="@color/colorPrimary"
                                app:boxStrokeWidth="0dp"
                                app:boxCornerRadiusBottomEnd="10dp"
                                app:boxCornerRadiusBottomStart="10dp"
                                app:boxCornerRadiusTopEnd="10dp"
                                app:boxCornerRadiusTopStart="10dp">

                                <EditText
                                    android:id="@+id/etregconfirmpass"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/ethintcolor"
                                    android:inputType="textPassword"
                                    />

                            </com.google.android.material.textfield.TextInputLayout>

                        </soup.neumorphism.NeumorphCardView>

                        <soup.neumorphism.NeumorphCardView
                            android:id="@+id/btn_register"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:layout_marginTop="90dp"
                            app:neumorph_shadowColorDark="@color/neumorphdarkshadow"
                            app:neumorph_shadowColorLight="@color/neumorphlightshadow"
                            android:layout_gravity="bottom|center"
                            app:neumorph_shapeType="flat">

                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="5dp"
                                android:layout_gravity="center"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Register"
                                    android:gravity="center"
                                    android:textColor="@color/logbtncolor"
                                    android:layout_gravity="center"
                                    android:textSize="20sp"
                                    android:textStyle="bold"/>

                            </LinearLayout>

                        </soup.neumorphism.NeumorphCardView>

                        <soup.neumorphism.NeumorphCardView
                            android:id="@+id/btn_already"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            app:neumorph_shadowColorDark="@color/neumorphdarkshadow"
                            app:neumorph_shadowColorLight="@color/neumorphlightshadow"
                            android:layout_gravity="bottom|center"
                            app:neumorph_shapeType="flat">

                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="1dp"
                                android:layout_gravity="center"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Already Have An Account ?"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:layout_gravity="center"
                                    android:textSize="16sp"
                                    android:textStyle="bold"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Login Here"
                                    android:gravity="center"
                                    android:textColor="@color/colorOnPrimary"
                                    android:layout_gravity="center"
                                    android:textSize="16sp"
                                    android:textStyle="bold"/>

                            </LinearLayout>

                        </soup.neumorphism.NeumorphCardView>

                    </LinearLayout>

                </soup.neumorphism.NeumorphCardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <soup.neumorphism.NeumorphCardView
                        android:id="@+id/reggoogle"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        app:neumorph_shadowColorDark="@color/neumorphdarkshadow"
                        app:neumorph_shadowColorLight="@color/neumorphlightshadow"
                        app:neumorph_shapeType="flat">

                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            app:lottie_rawRes="@raw/ic_google"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"/>

                    </soup.neumorphism.NeumorphCardView>

                    <soup.neumorphism.NeumorphCardView
                        android:id="@+id/regmicrosoft"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        app:neumorph_shadowColorDark="@color/neumorphdarkshadow"
                        app:neumorph_shadowColorLight="@color/neumorphlightshadow"
                        app:neumorph_shapeType="flat">

                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            app:lottie_rawRes="@raw/ic_microsoft"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"/>

                    </soup.neumorphism.NeumorphCardView>

                    <soup.neumorphism.NeumorphCardView
                        android:id="@+id/regphone"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        app:neumorph_shadowColorDark="@color/neumorphdarkshadow"
                        app:neumorph_shadowColorLight="@color/neumorphlightshadow"
                        app:neumorph_shapeType="flat">

                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            app:lottie_rawRes="@raw/ic_phonelottie"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"/>

                    </soup.neumorphism.NeumorphCardView>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>