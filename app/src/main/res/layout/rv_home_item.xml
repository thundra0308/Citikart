<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="170dp"
        android:layout_height="250dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/homeCardBackgroundColor"
        android:elevation="10dp"
        app:cardElevation="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        app:cardCornerRadius="9dp"
        app:cardBackgroundColor="@color/accountcardtopcolor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_homefragment_productimage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_profileplaceholder"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_gravity="bottom"
                    android:gravity="center|bottom"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8.8dp"
                        app:cardBackgroundColor="#97FFFFFF"
                        android:layout_margin="5dp"
                        android:elevation="0dp"
                        app:cardElevation="0dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:padding="2.5dp"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/tv_homefragment_productprice"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Price"
                                    android:textColor="#008CFF"
                                    android:textSize="25sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_homefragment_productname"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/tv_homefragment_productprice"
                                    android:gravity="center"
                                    android:text="Name"
                                    android:textColor="@color/black"
                                    android:textSize="17sp"
                                    android:textStyle="bold" />

                                <View
                                    android:id="@+id/view_homefragment_border"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/black"
                                    android:layout_below="@id/tv_homefragment_productname"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"/>

                                <TextView
                                    android:id="@+id/tv_homefragment_productdesc"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Description"
                                    android:gravity="center"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:layout_below="@id/view_homefragment_border"
                                    android:textColor="@color/black"/>

                            </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.cardview.widget.CardView>
